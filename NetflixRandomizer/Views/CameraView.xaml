<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NetflixRandomizer.Views.CameraView"
             Title="CameraView">
    <VerticalStackLayout>
        <Button Text="Sacar foto" Command="{Binding PhotoCommand}"/>
        <Image Source="{Binding PhotoSrc}" Aspect="AspectFill" HeightRequest="400"/>
    </VerticalStackLayout>
</ContentPage>